<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="400">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button Name="RovnaSe" Content="=" Grid.Column="3" Grid.Row="6" FontSize="24" Margin="2,2,2,2"/>

        <Button Name="Cislo_0" Content="0" Grid.Column="1" Grid.Row="6" FontSize="24" Margin="2,2,2,2"/>
        <Button Name="Cislo_1" Content="1" Grid.Column="0" Grid.Row="5" FontSize="24" Margin="2,2,2,2"/>
        <Button Name="Cislo_2" Content="2" Grid.Column="1" Grid.Row="5" FontSize="24" Margin="2,2,2,2"/>
        <Button Name="Cislo_3" Content="3" Grid.Column="2" Grid.Row="5" FontSize="24" Margin="2,2,2,2"/>
        <Button Name="Cislo_4" Content="4" Grid.Column="0" Grid.Row="4" FontSize="24" Margin="2,2,2,2"/>
        <Button Name="Cislo_5" Content="5" Grid.Column="1" Grid.Row="4" FontSize="24" Margin="2,2,2,2"/>
        <Button Name="Cislo_6" Content="6" Grid.Column="2" Grid.Row="4" FontSize="24" Margin="2,2,2,2"/>
        <Button Name="Cislo_7" Content="7" Grid.Column="0" Grid.Row="3" FontSize="24" Margin="2,2,2,2"/>
        <Button Name="Cislo_8" Content="8" Grid.Column="1" Grid.Row="3" FontSize="24" Margin="2,2,2,2"/>
        <Button Name="Cislo_9" Content="9" Grid.Column="2" Grid.Row="3" FontSize="24" Margin="2,2,2,2"/>

        <Button Name="ZapornyToggle" Content="+/-" Grid.Column="0" Grid.Row="6" FontSize="24" Margin="2,2,2,2"/>
        <Button Name="Carka" Content="," Grid.Column="2" Grid.Row="6" FontSize="24" Margin="2,2,2,2"/>
        
        <Button Name="Plus" Content="+" Grid.Column="3" Grid.Row="5" FontSize="24" Margin="2,2,2,2"/>
        <Button Name="Minus" Content="-" Grid.Column="3" Grid.Row="4" FontSize="24" Margin="2,2,2,2"/>
        <Button Name="Krat" Content="*" Grid.Column="3" Grid.Row="3" FontSize="24" Margin="2,2,2,2"/>
        <Button Name="Deleno" Content="/" Grid.Column="3" Grid.Row="2" FontSize="24" Margin="2,2,2,2"/>
        <Button Name="Odmocnina" Content="√" Grid.Column="2" Grid.Row="2" FontSize="24" Margin="2,2,2,2"/>
        <Button Name="naDruhou" Content="x²" Grid.Column="1" Grid.Row="2" FontSize="24" Margin="2,2,2,2"/>
        <Button Name="naMinusPrvou" Content="1/x" Grid.Column="0" Grid.Row="2" FontSize="24" Margin="2,2,2,2"/>
        
        <Button Name="Procento" Content="%" Grid.Column="0" Grid.Row="1" FontSize="24" Margin="2,2,2,2"/>
        <Button Name="CE" Content="CE" Grid.Column="1" Grid.Row="1" FontSize="24" Margin="2,2,2,2"/>
        <Button Name="C" Content="C" Grid.Column="2" Grid.Row="1" FontSize="24" Margin="2,2,2,2"/>
        <Button Name="Smazat" Content="⌫" Grid.Column="3" Grid.Row="1" FontSize="24" Margin="2,2,2,2"/>

        <Button Name="Label" Content="S" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="4" FontSize="24" Margin="2,2,2,2" Click="Label_Click"/>
    </Grid>
</Window>
